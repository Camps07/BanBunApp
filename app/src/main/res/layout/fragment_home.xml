<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/banbun_logo"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_font"
        android:text="BANBUN"
        android:textSize="40sp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textStyle="italic"
        android:textColor="@color/title"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_font"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="BanBun is a mobile application that detects the presence and concentration of BBTV (Banana Bunchy Top Virus) on Cavendish bananas. This application uses a MobileNet-based CNN to process the images of ELISA plate."
        android:textColor="@color/title"/>

</RelativeLayout>