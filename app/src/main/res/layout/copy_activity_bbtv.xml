<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Copy">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guide"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_font"
            android:textStyle="italic"
            android:textColor="@color/title"/>

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guide"
            android:text="Step 1:"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_font"
            android:textStyle="italic"
            android:textColor="@color/title"/>

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/step1"
            android:layout_below="@id/step1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Kumuha ng input na imahe gamit ang anuman sa dalawang pindutang ito. "
            android:layout_below="@id/image_1"/>

        <TextView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2:"
            android:layout_below="@id/text1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_font"
            android:textStyle="italic"
            android:textColor="@color/title"/>

        <ImageView
            android:id="@+id/image_2_1"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/step2_1"
            android:layout_below="@id/step2"/>

        <ImageView
            android:id="@+id/image_2_2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/step2_2"
            android:layout_below="@id/image_2_1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Bigyang pansin ang katumbas na kulay ng bawat konsentrasyong ng BBTV bago \npindutin ang “Tuklasin”."
            android:layout_below="@id/image_2_2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Step 3:"
            android:layout_below="@id/text2"
            android:fontFamily="@font/montserrat_font"
            android:textStyle="italic"
            android:textColor="@color/title"/>

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/step2_2"
            android:layout_below="@id/step3"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Tignan ang kung ano ang magiging resulta at antas ng kumpiyansa."
            android:layout_below="@id/image_3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="85dp"/>
    </RelativeLayout>
</ScrollView>